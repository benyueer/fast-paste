{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fast-paste",
  "version": "0.1.0",
  "identifier": "com.wuji.fast-paste.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "fast-paste",
        "width": 500,
        "height": 300,
        "decorations": true,
        "skipTaskbar": true,
        "transparent": true,
        "visible": false,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png"
    }
  },
  "bundle": {
    "active": true,
    "resources": ["../public/icon.png"],
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
